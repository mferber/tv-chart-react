{
  "pre-commit": {
    "jobs": [
      {
        "name": "lint",
        "run": "mise x -- eslint {staged_files} --fix",
        "glob": "*.{js,ts,jsx,tsx}",
        "fail-on-changes": "always"
      },
      {
        "name": "reformat",
        "run": "mise x -- pretty-quick --staged --no-restage --bail --pattern '**/*.(js|jsx|ts|tsx)'"
      }
    ]
  }
}
