{
  "pre-commit": {
    "jobs": [
      {
        "name": "lint",
        "run": "mise x -- eslint {staged_files}",
        "glob": "*.{js,ts,jsx,tsx}"
      },
      {
        "name": "reformat",
        "run": "mise x -- pretty-quick --staged --no-restage --bail --pattern '**/*.(js|jsx|ts|tsx)'"
      }
    ]
  }
}
